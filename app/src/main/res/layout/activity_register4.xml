<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".login4.RegisterActivity4">

    <LinearLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:ignore="ScrollViewSize">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/wasi_delnorte" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:padding="5dp"
            android:text="Bienvenido de vuelta !"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:padding="5dp"
            android:text="Puedes buscar cualquier plato en nuestras diferentes categorías, además de poder adquirirlos"
            android:textAlignment="center"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableStart="@drawable/google_wasi_norte"
                android:drawablePadding="15dp"
                android:elevation="20dp"
                android:fontFamily="@font/muli"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:text="@string/google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableStart="@drawable/facebook_wasi_norte"
                android:drawablePadding="15dp"
                android:elevation="20dp"
                android:fontFamily="@font/muli"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:text="@string/Facebook"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/custom_editext_rounded"
            android:fontFamily="@font/muli"
            android:hint="@string/correo"
            android:drawableEnd="@drawable/ic_email"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textSize="16sp"
            tools:ignore="Autofill" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/ic_black_eye"
            android:background="@drawable/custom_editext_rounded"
            android:fontFamily="@font/muli"
            android:hint="@string/contrasena"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="16sp"
            tools:ignore="Autofill" />


        <Button
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:paddingStart="80dp"
            android:backgroundTint="#e6251e"
            android:paddingEnd="80dp"
            android:textColor="@color/white"
            android:drawablePadding="15dp"
            android:background="@drawable/custom_editext_rounded"
            android:drawableStart="@drawable/ic_white_person"
            android:text="@string/iniciar_sesion"
            android:fontFamily="@font/muli"
            android:textAllCaps="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_gravity="center"
            android:textAlignment="center"
            android:padding="10dp"
            android:fontFamily="@font/muli"
            android:textColor="@color/red_wasi_nort"
            android:text="@string/olvidaste_contrasena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|bottom"
            android:orientation="vertical">

            <TextView
              android:onClick="ViewLogin"
                android:gravity="bottom"
                android:fontFamily="@font/muli"
                android:padding="20dp"
                android:textColor="@color/red_wasi_nort"
                android:text="@string/no_tienes_cuenta_a_n_registrate"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:ignore="RtlCompat" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>