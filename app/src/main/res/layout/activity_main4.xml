<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ScrollViewSize"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/todo"
            android:src="@drawable/wasi_delnorte" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:padding="5dp"
            android:text="@string/unet_para_empezar_tu_aventura_culinaria"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/muli"
            android:padding="5dp"
            android:text="@string/descubre_tu_plato_perfecto"
            android:textAlignment="center"
            android:textSize="15sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableStart="@drawable/google_wasi_norte"
                android:drawablePadding="15dp"
                android:elevation="20dp"
                android:fontFamily="@font/muli"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:text="@string/google"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:backgroundTint="@color/white"
                android:clickable="true"
                android:drawableStart="@drawable/facebook_wasi_norte"
                android:drawablePadding="15dp"
                android:elevation="20dp"
                android:fontFamily="@font/muli"
                android:paddingStart="50dp"
                android:paddingEnd="50dp"
                android:text="@string/Facebook"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="ButtonStyle" />

        </LinearLayout>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/custom_editext_rounded"
            android:fontFamily="@font/muli"
            android:hint="@string/nombre"
            android:inputType="textPersonName"
            android:padding="15dp"
            android:textSize="16sp"
            tools:ignore="Autofill" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="25dp"
            android:background="@drawable/custom_editext_rounded"
            android:fontFamily="@font/muli"
            android:hint="@string/correo"
            android:inputType="textEmailAddress"
            android:padding="15dp"
            android:textSize="16sp"
            tools:ignore="Autofill" />


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="10dp"
            android:drawableEnd="@drawable/ic_black_eye"
            android:background="@drawable/custom_editext_rounded"
            android:fontFamily="@font/muli"
            android:hint="@string/contrasena"
            android:inputType="textPassword"
            android:padding="15dp"
            android:textSize="16sp"
            tools:ignore="Autofill" />

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/muli"
            android:padding="10dp"
            android:text="@string/politica_privacidad"
            android:textSize="13sp" />


        <CheckBox

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:fontFamily="@font/muli"
            android:padding="10dp"
            android:text="@string/suscribete"
            android:textSize="13sp" />

        <Button
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:paddingStart="80dp"
            android:paddingEnd="80dp"
            android:drawablePadding="15dp"
            android:background="@drawable/custom_editext_rounded"
            android:drawableStart="@drawable/ic_blackperson"
            android:text="@string/registrar"
            android:fontFamily="@font/muli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:onClick="ViewLogin"
                android:padding="35dp"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:fontFamily="@font/muli"
                android:textColor="@color/red_wasi_nort"
                android:text="@string/tienes_una_cuenta_inicia_sesion"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>

        </LinearLayout>




    </LinearLayout>

</ScrollView>
