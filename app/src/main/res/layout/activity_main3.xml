<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".login3.MainActivity3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ActionBarStyle">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_principal"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/pill"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/text_titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img_principal"
                        android:text="@string/jopi_g_center"
                        android:textAppearance="@style/TitulosActionBar" />

                </androidx.appcompat.widget.Toolbar>

            </LinearLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <ImageView
            android:id="@+id/encabezado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="25dp"
            android:background="@drawable/farmacia"
            android:contentDescription="@string/todo" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:gravity="center"
            app:cardBackgroundColor="#fff"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables,UselessLeaf">

                    <ImageView
                        android:id="@+id/img_advertencia"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:background="@drawable/advertencia"
                        android:contentDescription="@string/todo" />

                    <TextView
                        android:id="@+id/mensaje_credenciales"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingStart="20dp"
                        android:text="@string/texto_jopi"
                        android:textAlignment="center"
                        android:textAppearance="@style/Sub_Sub_Titulos"
                        tools:ignore="RtlSymmetry" />

                </LinearLayout>

                <View

                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#66000000"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableEnd="@drawable/ic_email"
                            android:fontFamily="@font/muli"
                            android:hint="@string/correo"
                            android:inputType="textEmailAddress"
                            android:paddingTop="20dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="20dp"
                            android:textColor="@android:color/black"
                            android:textSize="17sp"
                            tools:ignore="Autofill,LabelFor,RtlSymmetry,SpeakableTextPresentCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        app:passwordToggleEnabled="true"
                        android:paddingEnd="3dp"
                        android:layout_height="wrap_content"
                        tools:ignore="RtlSymmetry">

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/muli"
                            android:hint="@string/contrasena"
                            android:inputType="textPassword"
                            android:paddingTop="20dp"
                            android:paddingEnd="15dp"
                            android:paddingBottom="20dp"
                            android:textColor="@android:color/black"
                            android:textSize="17sp"
                            tools:ignore="Autofill,LabelFor,RtlSymmetry,SpeakableTextPresentCheck" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <Button
                        android:id="@+id/btn_ingresar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/green_sick"
                        android:fontFamily="@font/muli"
                        android:text="@string/ingresar"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/btn_registrar"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:backgroundTint="@color/green_sick"
                        android:fontFamily="@font/muli"
                        android:text="@string/registrar"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="@color/transparent"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text="@string/olvidaste_contrasena"
                    android:textAllCaps="false"
                    android:textColor="@color/blue_primary_dark"
                    android:textSize="14sp" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoSizeTextType="uniform"
                    android:background="@drawable/tx_cardview"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:padding="25dp"
                    android:text="@string/paul_guill_n_jopi_g_center_proyecto_universitario"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    tools:targetApi="o" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="15dp"
                tools:ignore="UselessParent">


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:clickable="true"
                    android:layout_weight="0.3"
                    android:backgroundTint="#1FFC8484"
                    android:drawableStart="@drawable/g"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:text="@string/google"
                    android:shadowColor="@color/black"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle,SmallSp" />


                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="0.3"
                    android:backgroundTint="#1F3F51B5"
                    android:clickable="true"
                    android:drawableStart="@drawable/f"
                    android:elevation="20dp"
                    android:fontFamily="@font/muli"
                    android:gravity="center"
                    android:shadowColor="@color/black"
                    android:text="@string/Facebook"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle,SmallSp" />

                <Button
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.3"
                    android:drawableStart="@drawable/t"
                    android:backgroundTint="#1F03A9F4"
                    android:clickable="true"
                    android:fontFamily="@font/muli"
                    android:elevation="20dp"
                    android:shadowColor="@color/black"
                    android:text="@string/twitter"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    tools:ignore="ButtonStyle,SmallSp" />


             <!--   <Button
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableStart="@drawable/c"
                    android:backgroundTint="@color/white"
                    android:clickable="true"
                    android:fontFamily="@font/muli"
                    android:text="@string/celular"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="10sp"
                    tools:ignore="ButtonStyle,SmallSp" />-->


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</ScrollView>